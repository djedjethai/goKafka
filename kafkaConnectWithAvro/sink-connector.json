{
	"name": "my-connector",
	"config": {
		"connector.class":                         "com.mongodb.kafka.connect.MongoSourceConnector",
		"topics":                                  "my-topic",
		"transforms":                              "unwrap,avroToBson",
		"transforms.unwrap.type":                  "io.confluent.connect.transforms.UnwrapFromEnvelope",
		"transforms.unwrap.drop.invalid.message":  "true",
		"transforms.avroToBson.type":              "io.confluent.connect.transforms.AvroConverter",
		"transforms.avroToBson.schemaRegistryUrl": "http://localhost:8081",
		"transforms.avroToBson.output.format":     "bson",
		"connection.uri":                  	   "mongodb://mongo:27017",
		"database":                        	   "my-database",
		"collection":                        	   "my-collection",
		"tasksMax":                                "1"
	}
}

